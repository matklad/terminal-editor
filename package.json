{
  "name": "terminal-editor",
  "displayName": "terminal-editor",
  "description": "A terminal in your editor",
  "repository": "https://github.com/matklad/terminal-editor",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "terminal-editor",
        "aliases": [
          "Terminal Editor"
        ],
        "extensions": [
          ".terminal"
        ]
      }
    ],
    "commands": [
      {
        "command": "terminal-editor.reveal",
        "title": "Terminal Editor: Reveal"
      },
      {
        "command": "terminal-editor.run",
        "title": "Terminal Editor: Run"
      },
      {
        "command": "terminal-editor.dwim",
        "title": "Terminal Editor: Do What I Mean"
      },
      {
        "command": "terminal-editor.toggleFold",
        "title": "Terminal Editor: Toggle Fold"
      },
      {
        "command": "terminal-editor.tab",
        "title": "Terminal Editor: Tab"
      },
      {
        "command": "terminal-editor.clearHistory",
        "title": "Terminal Editor: Clear History"
      }
    ],
    "keybindings": [
      {
        "command": "terminal-editor.tab",
        "key": "tab",
        "when": "editorTextFocus && resourceScheme == terminal-editor"
      }
    ],
    "configuration": {
      "title": "Terminal Editor",
      "properties": {
        "terminal-editor.maxOutputLines": {
          "type": "number",
          "default": 40,
          "minimum": 1,
          "maximum": 10000,
          "description": "Maximum number of output lines to display in the terminal"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
